#include<stdio.h>
#include<conio.h>
long add(long *,long *);
void main()
{
	long first,second,sum;
	printf("enter two numbers to add");
	scanf("%ld%ld",&first,&second);
	sum=add(&first,&second);
	 printf("(%ld)+(%ld)=(%ld)\n",first,second,sum);
	getch();
}
long add(long *x,long *y)
{
	long sum;
	sum=*x+*y;
	return sum;
}
