#include<stdio.h>
int main()
{
	int n,i,fact=1;
	printf("enter a number:");
	scanf("%d",&n);
	if(n<0)
	{
		printf("error factorial of number doesnt exit");
	}
	else
	for(i=1;i<=n;i++)
	{
		fact*=i;
	}
	printf("factorial of %d=%d",n,fact);
	
	printf("the factors of n are:");
	for(i=1;i<=n;i++)
	{
		if(n%i==0)
		{
			printf("\n%d ",i);
		}
	}
	return 0;
}
